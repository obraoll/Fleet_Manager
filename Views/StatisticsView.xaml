<UserControl x:Class="FleetManager.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F8FAFC">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- EN-TÃŠTE Dashboard Style -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Statistiques"
                              FontFamily="Inter, Segoe UI"
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#0F172A" 
                              Margin="0,0,0,6"/>
                    <TextBlock Text="Analysez les performances de votre flotte"
                              FontSize="14" 
                              Foreground="#64748B"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="Transparent"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Margin="0,0,12,0"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="14"
                               Padding="0"
                               Content="ðŸ”„ Actualiser"
                               Command="{Binding RefreshCommand}"
                               Cursor="Hand"/>
                    </Border>
                    <Border Background="#3B82F6"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               Padding="0"
                               Content="ðŸ“Š Graphiques avancÃ©s"
                               Command="{Binding ShowAdvancedChartsCommand}"
                               Cursor="Hand"/>
                    </Border>
                </StackPanel>
        </Grid>

            <!-- FILTRES -->
            <Border Background="#FFFFFF" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <!-- Recherche -->
                    <Border Background="#F8FAFC" 
                           CornerRadius="8" 
                           Height="40" 
                           Width="400"
                           Margin="0,0,16,0"
                           Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="#475569"
                                    VerticalContentAlignment="Center"
                                    Width="300"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- PÃ©riode -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <DatePicker SelectedDate="{Binding StartDate}"
                                    Width="140" 
                                    Height="36"
                                    FontSize="13"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="Ã " FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#94A3B8"/>
                        <DatePicker SelectedDate="{Binding EndDate}"
                                    Width="140" 
                                    Height="36"
                                    FontSize="13"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- VÃ©hicule -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸš—" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding Vehicles}"
                                  SelectedItem="{Binding SelectedVehicle}"
                                  DisplayMemberPath="RegistrationNumber"
                                  Width="160"
                                  Height="36"
                                  FontSize="13"
                                  Background="#FFFFFF"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="1"
                                  Padding="10,0"
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Bouton RÃ©initialiser -->
                    <Border Background="#F8FAFC"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="10,8"
                           Height="40"
                           VerticalAlignment="Center"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="13"
                               Padding="0"
                               Content="â†º RÃ©initialiser"
                               Command="{Binding ResetFiltersCommand}"
                               Cursor="Hand"/>
                    </Border>
                </WrapPanel>
            </Border>

            <!-- CONTENU PRINCIPAL -->
            <StackPanel>
                
                <!-- CARTES KPI -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total VÃ©hicules -->
                    <Border Grid.Column="0" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16"
                           Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="VÃ‰HICULES"
                                       Style="{StaticResource SmallText}"
                                       FontWeight="SemiBold"
                                       Foreground="#64748B"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding TotalVehicles, Mode=OneWay}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#1E293B"/>
                            <TextBlock Text="dans la flotte"
                                       Style="{StaticResource SmallText}"
                                       Foreground="#94A3B8"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Carburant -->
                    <Border Grid.Column="1" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16"
                           Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="CARBURANT"
                                       Style="{StaticResource SmallText}"
                                       FontWeight="SemiBold"
                                       Foreground="#64748B"
                                       Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TotalFuelQuantity, Mode=OneWay, StringFormat=N0}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1E293B"/>
                                <TextBlock Text=" L"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#64748B"
                                           Margin="2,6,0,0"/>
                            </StackPanel>
                            <TextBlock Text="consommÃ©s"
                                       Style="{StaticResource SmallText}"
                                       Foreground="#94A3B8"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- CoÃ»t Total -->
                    <Border Grid.Column="2" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16"
                           Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="COÃ›T TOTAL"
                                       Style="{StaticResource SmallText}"
                                       FontWeight="SemiBold"
                                       Foreground="#64748B"
                                       Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TotalCost, Mode=OneWay, StringFormat=N0}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1E293B"/>
                                <TextBlock Text=" â‚¬"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#64748B"
                                           Margin="2,6,0,0"/>
                            </StackPanel>
                            <TextBlock Text="dÃ©penses totales"
                                       Style="{StaticResource SmallText}"
                                       Foreground="#94A3B8"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Consommation Moyenne -->
                    <Border Grid.Column="3" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="CONSOMMATION"
                                       Style="{StaticResource SmallText}"
                                       FontWeight="SemiBold"
                                       Foreground="#64748B"
                                       Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding AverageConsumption, Mode=OneWay, StringFormat=N1}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#1E293B"/>
                                <TextBlock Text=" L/100"
                                           Style="{StaticResource SmallText}"
                                           FontWeight="SemiBold"
                                           Foreground="#64748B"
                                           Margin="2,10,0,0"/>
                            </StackPanel>
                            <TextBlock Text="moyenne flotte"
                                       Style="{StaticResource SmallText}"
                                       Foreground="#94A3B8"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- GRAPHIQUES ET LISTES -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- GRAPHIQUE -->
                    <Border Grid.Column="0" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16"
                           Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Ã‰volution des coÃ»ts"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E293B"
                                       Margin="0,0,0,12"/>
                            
                            <lvc:CartesianChart Series="{Binding MonthlyCostSeries}"
                                                Height="200"
                                                LegendPosition="Bottom"/>
                        </StackPanel>
                    </Border>

                    <!-- TOP VÃ‰HICULES -->
                    <Border Grid.Column="1" 
                           Background="#FFFFFF" 
                           BorderBrush="#E2E8F0" 
                           BorderThickness="1" 
                           CornerRadius="12" 
                           Padding="16"
                           Margin="0,0,12,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Top 5 vÃ©hicules"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E293B"
                                       Margin="0,0,0,12"/>
                            
                            <ItemsControl ItemsSource="{Binding TopVehicles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FAFC"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding RegistrationNumber}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="#1E293B"/>
                                                    <TextBlock FontSize="10" Foreground="#64748B">
                                                        <Run Text="{Binding TotalMileage, Mode=OneWay, StringFormat=N0}"/>
                                                        <Run Text="km"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           Foreground="#F59E0B"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding TotalCost, Mode=OneWay, StringFormat=N0}"/>
                                                    <Run Text="â‚¬"/>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- TABLEAU DÃ‰TAILLÃ‰ -->
                <Border Background="#FFFFFF" 
                       BorderBrush="#E2E8F0" 
                       BorderThickness="1" 
                       CornerRadius="12" 
                       Padding="16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Statistiques par vÃ©hicule"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E293B"
                                       VerticalAlignment="Center"/>
                            <Button Content="Exporter Excel"
                                    Command="{Binding ExportToExcelCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    FontSize="12"
                                    Padding="10,5"
                                    HorizontalAlignment="Right"/>
                        </Grid>

                        <DataGrid ItemsSource="{Binding VehicleStatistics}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowHeight="32"
                                  FontSize="12">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F8FAFC"/>
                                    <Setter Property="Foreground" Value="#64748B"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F8FAFC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="VÃ©hicule" 
                                                    Binding="{Binding RegistrationNumber}"
                                                    Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#1E293B"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Distance (km)" 
                                                    Binding="{Binding TotalMileage, Mode=OneWay, StringFormat=N0}"
                                                    Width="110"/>
                                <DataGridTextColumn Header="Carburant (L)" 
                                                    Binding="{Binding TotalLiters, Mode=OneWay, StringFormat=N0}"
                                                    Width="110"/>
                                <DataGridTextColumn Header="CoÃ»t (â‚¬)" 
                                                    Binding="{Binding TotalCost, Mode=OneWay, StringFormat=N0}"
                                                    Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Conso. (L/100)" 
                                                    Binding="{Binding AverageConsumption, StringFormat=N1}"
                                                    Width="110">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#10B981"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Maintenances" 
                                                    Binding="{Binding TotalMaintenances}"
                                                    Width="100"/>
                                <DataGridTextColumn Header="CoÃ»t Maint. (â‚¬)" 
                                                    Binding="{Binding TotalMaintenanceCost, StringFormat=N0}"
                                                    Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
