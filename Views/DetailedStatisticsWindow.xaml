<!-- Views/DetailedStatisticsWindow.xaml -->
<Window x:Class="FleetManager.Views.DetailedStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="ðŸ“Š Statistiques DÃ©taillÃ©es - Fleet Manager"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“Š Statistiques DÃ©taillÃ©es" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PeriodDescription}" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ Actualiser" Command="{Binding RefreshCommand}"
                            Padding="12,6" Margin="5" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button Content="ðŸ“¤ Exporter" Command="{Binding ExportCommand}"
                            Padding="12,6" Margin="5" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                
                <!-- Indicateurs globaux -->
                <Border Style="{StaticResource ModernCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="10">
                            <TextBlock Text="ðŸš— VÃ©hicules Actifs" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding ActiveVehiclesCount}" FontSize="32" FontWeight="Bold" Foreground="#2196F3"/>
                            <TextBlock Text="{Binding ActiveVehiclesPercentage, StringFormat={}{0:F1}% de la flotte}" 
                                       FontSize="10" Foreground="#999"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="â›½ Litres ConsommÃ©s" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding TotalLitersConsumed, StringFormat={}{0:N0}}" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                            <TextBlock Text="{Binding AverageConsumption, StringFormat={}{0:F2} L/100km moy.}" 
                                       FontSize="10" Foreground="#999"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="10">
                            <TextBlock Text="ðŸ’° CoÃ»t Total" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding TotalOperatingCost, StringFormat={}{0:C0}}" FontSize="32" FontWeight="Bold" Foreground="#FF9800"/>
                            <TextBlock Text="{Binding CostPerKm, StringFormat={}{0:C} par km}" 
                                       FontSize="10" Foreground="#999"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10">
                            <TextBlock Text="ðŸ“ KilomÃ©trage Total" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding TotalKilometers, StringFormat={}{0:N0}}" FontSize="32" FontWeight="Bold" Foreground="#9C27B0"/>
                            <TextBlock Text="{Binding AverageKmPerVehicle, StringFormat={}{0:N0} km/vÃ©hicule}" 
                                       FontSize="10" Foreground="#999"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Graphiques d'analyse -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- RÃ©partition des coÃ»ts -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}" Text="ðŸ’° RÃ©partition des CoÃ»ts"/>
                            <lvc:PieChart Series="{Binding CostDistributionSeries}" Height="250" LegendPosition="Bottom"/>
                        </StackPanel>
                    </Border>

                    <!-- Types de vÃ©hicules -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource H2}" Text="ðŸš™ Types de VÃ©hicules"/>
                            <lvc:PieChart Series="{Binding VehicleTypeSeries}" Height="250" LegendPosition="Bottom"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Tendances mensuelles -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource H2}" Text="ðŸ“ˆ Ã‰volution Mensuelle (12 mois)"/>
                        <lvc:CartesianChart Series="{Binding MonthlyTrendsSeries}" Height="300" LegendPosition="Top"/>
                    </StackPanel>
                </Border>

                <!-- Tableau des vÃ©hicules -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Style="{StaticResource H2}" Text="ðŸ“‹ DÃ©tails par VÃ©hicule" Margin="0"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="ðŸ” Rechercher:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Width="200" Padding="5" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>

                        <DataGrid ItemsSource="{Binding FilteredVehicleStatistics}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  Background="White"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F8F9FA"
                                  MaxHeight="400">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Immatriculation" Binding="{Binding RegistrationNumber}" Width="120"/>
                                <DataGridTextColumn Header="VÃ©hicule" Binding="{Binding VehicleName}" Width="150"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding VehicleType}" Width="100"/>
                                <DataGridTextColumn Header="KilomÃ©trage" Binding="{Binding CurrentMileage, StringFormat={}{0:N0}}" Width="100"/>
                                <DataGridTextColumn Header="Conso. (L/100km)" Binding="{Binding AverageConsumption, StringFormat={}{0:F2}}" Width="120"/>
                                <DataGridTextColumn Header="Nb Pleins" Binding="{Binding TotalRefuels}" Width="80"/>
                                <DataGridTextColumn Header="CoÃ»t Carburant" Binding="{Binding TotalFuelCost, StringFormat={}{0:C}}" Width="120"/>
                                <DataGridTextColumn Header="CoÃ»t Maintenance" Binding="{Binding TotalMaintenanceCost, StringFormat={}{0:C}}" Width="130"/>
                                <DataGridTextColumn Header="CoÃ»t Total" Binding="{Binding TotalCost, StringFormat={}{0:C}}" Width="120"/>
                                <DataGridTextColumn Header="â‚¬/km" Binding="{Binding CostPerKilometer, StringFormat={}{0:C}}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="{Binding TotalVehiclesDisplay}" FontSize="12" Foreground="#666"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Analyse comparative -->
                <Border Style="{StaticResource CardStyle}" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource H2}" Text="âš–ï¸ Analyse Comparative"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Top performers -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ† VÃ©hicules les Plus Ã‰conomiques" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <ListView ItemsSource="{Binding TopEfficientVehicles}" Background="Transparent" BorderThickness="0" MaxHeight="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Rank}" FontWeight="Bold" Foreground="#4CAF50"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding RegistrationNumber}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VehicleName}" FontSize="10" Foreground="#666"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding AverageConsumption, StringFormat={}{0:F2} L/100km}" 
                                                           FontWeight="Bold" Foreground="#4CAF50"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>

                            <!-- Bottom performers -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="âš ï¸ VÃ©hicules les Plus CoÃ»teux" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <ListView ItemsSource="{Binding TopCostlyVehicles}" Background="Transparent" BorderThickness="0" MaxHeight="200">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Rank}" FontWeight="Bold" Foreground="#F44336"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding RegistrationNumber}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding VehicleName}" FontSize="10" Foreground="#666"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding TotalCost, StringFormat={}{0:C}}" 
                                                           FontWeight="Bold" Foreground="#F44336"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer avec actions -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ“…" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding LastUpdated}" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ“Š Export Excel" Command="{Binding ExportExcelCommand}"
                            Padding="15,8" Margin="5" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Content="ðŸ“„ Export PDF" Command="{Binding ExportPdfCommand}"
                            Padding="15,8" Margin="5" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button Content="âœ– Fermer" Command="{Binding CloseCommand}"
                            Padding="15,8" Margin="5" Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Indicateur de chargement -->
        <Grid Grid.RowSpan="3" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White" CornerRadius="10" Padding="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" Margin="0,0,0,20"/>
                    <TextBlock Text="Chargement des statistiques..." FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
