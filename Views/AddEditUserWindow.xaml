<Window x:Class="FleetManager.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Width="500" Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Margin="20" Background="White" CornerRadius="8" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="{Binding WindowTitle}" FontSize="22" FontWeight="Bold" 
                          Foreground="#1976D2"/>
                <TextBlock Text="Les champs marquÃ©s * sont obligatoires" 
                          FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Formulaire -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Nom d'utilisateur * -->
                    <TextBlock Text="Nom d'utilisateur *" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Height="35" Padding="8"
                             IsEnabled="{Binding IsNewUser}"/>

                    <!-- Nom complet * -->
                    <TextBlock Text="Nom complet *" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             Height="35" Padding="8"/>

                    <!-- Email -->
                    <TextBlock Text="Email" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Height="35" Padding="8"/>

                    <!-- Mot de passe * (uniquement pour nouveau) -->
                    <StackPanel Visibility="{Binding IsNewUser, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Mot de passe *" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Height="35" Padding="8"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>
                        <TextBlock Text="Minimum 6 caractÃ¨res" FontSize="11" 
                                  Foreground="#666" Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Confirmation mot de passe * (uniquement pour nouveau) -->
                    <StackPanel Visibility="{Binding IsNewUser, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Confirmer le mot de passe *" Margin="0,15,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Padding="8"
                                    PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- RÃ´le * -->
                    <TextBlock Text="RÃ´le *" Margin="0,15,0,5"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                             SelectedItem="{Binding SelectedRole}"
                             Height="35" Padding="8"/>

                    <!-- Statut -->
                    <TextBlock Text="Statut" Margin="0,15,0,5"/>
                    <CheckBox IsChecked="{Binding IsActive}" 
                             Content="Compte actif" 
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons -->
            <Border Grid.Row="2" Padding="0,20,0,0" BorderThickness="0,1,0,0" 
                   BorderBrush="#EEE" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Enregistrer" Width="150" Height="40"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,10,0"/>
                    <Button Content="Annuler" Width="120" Height="40"
                            IsCancel="True"
                            Click="CancelButton_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
