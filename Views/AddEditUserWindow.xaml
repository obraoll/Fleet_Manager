<Window x:Class="FleetManager.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:FleetManager.Helpers"
        Title="{Binding WindowTitle}" 
        Width="500" Height="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Border Margin="20" Style="{StaticResource ModernCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tÃªte -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="{Binding WindowTitle}" 
                          Style="{StaticResource H1}"/>
                <TextBlock Text="Les champs marquÃ©s * sont obligatoires" 
                          Style="{StaticResource SmallText}"
                          Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Formulaire -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Nom d'utilisateur * -->
                    <TextBlock Text="Nom d'utilisateur *" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             IsEnabled="{Binding IsNewUser}"
                             Margin="0,0,0,12"/>

                    <!-- Nom complet * -->
                    <TextBlock Text="Nom complet *" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,12"/>

                    <!-- Email -->
                    <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,12"/>

                    <!-- Mot de passe * (uniquement pour nouveau) -->
                    <StackPanel Visibility="{Binding IsNewUser, Converter={StaticResource BoolToVisibility}}" Margin="0,0,0,12">
                        <TextBlock Text="Mot de passe *" Style="{StaticResource FormLabel}"/>
                        <PasswordBox x:Name="PasswordBox" 
                                    Style="{StaticResource ModernPasswordBox}"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>
                        <TextBlock Text="Minimum 6 caractÃ¨res" 
                                  Style="{StaticResource MutedText}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Confirmation mot de passe * (uniquement pour nouveau) -->
                    <StackPanel Visibility="{Binding IsNewUser, Converter={StaticResource BoolToVisibility}}" Margin="0,0,0,12">
                        <TextBlock Text="Confirmer le mot de passe *" Style="{StaticResource FormLabel}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" 
                                    Style="{StaticResource ModernPasswordBox}"
                                    PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- RÃ´le * -->
                    <TextBlock Text="RÃ´le *" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                             SelectedItem="{Binding SelectedRole}"
                             Style="{StaticResource ModernComboBox}"
                             Margin="0,0,0,12"/>

                    <!-- Statut -->
                    <TextBlock Text="Statut" Margin="0,15,0,5"/>
                    <CheckBox IsChecked="{Binding IsActive}" 
                             Content="Compte actif" 
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"/>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Photo -->
                    <TextBlock Text="Photo de profil"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- AperÃ§u de l'image -->
                        <Border Grid.Row="0"
                                Width="200"
                                Height="200"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,12"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1"
                                CornerRadius="100"
                                Background="#F1F5F9"
                                ClipToBounds="True">
                            <Grid>
                                <!-- Image avec recadrage circulaire parfait -->
                                <Ellipse Width="200" 
                                        Height="200"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding SelectedImagePreview}"
                                                   Stretch="UniformToFill"
                                                   AlignmentX="Center"
                                                   AlignmentY="Center"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <!-- IcÃ´ne par dÃ©faut -->
                                <TextBlock Text="ğŸ‘¤" 
                                          FontSize="64" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Opacity="0.4">
                                    <TextBlock.Visibility>
                                        <Binding Path="SelectedImagePreview">
                                            <Binding.Converter>
                                                <helpers:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                            <Binding.ConverterParameter>Inverse</Binding.ConverterParameter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Boutons pour gÃ©rer l'image -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="ğŸ“· SÃ©lectionner une image"
                                    Command="{Binding SelectImageCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="180"
                                    Margin="0,0,8,0"/>
                            <Button Content="ğŸ—‘ï¸ Supprimer"
                                    Command="{Binding RemoveImageCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="120"
                                    Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibility}}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons -->
            <Border Grid.Row="2" Padding="0,20,0,0" BorderThickness="0,1,0,0" 
                   BorderBrush="#EEE" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ğŸ’¾ Enregistrer" 
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,12,0"/>
                    <Button Content="Annuler" 
                            IsCancel="True"
                            Click="CancelButton_Click"
                            Style="{StaticResource SecondaryButton}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
