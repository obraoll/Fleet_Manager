<UserControl x:Class="FleetManager.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:FleetManager.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="{StaticResource BackgroundBrush}">

    <UserControl.Resources>
        <helpers:UserImagePathConverter x:Key="UserImagePathConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- EN-TÃŠTE Dashboard Style -->
            <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Gestion des Utilisateurs"
                           FontFamily="Inter, Segoe UI"
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#0F172A" 
                           Margin="0,0,0,6"/>
                <TextBlock Text="GÃ©rez les comptes utilisateurs de l'application"
                           FontSize="14" 
                           Foreground="#64748B"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Border Background="Transparent"
                       BorderBrush="#E2E8F0"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="12,8"
                       Height="40"
                       Margin="0,0,12,0"
                       Cursor="Hand">
                    <Button Background="Transparent"
                           BorderThickness="0"
                           Foreground="#475569"
                           FontSize="14"
                           Padding="0"
                           Content="ğŸ”„ Actualiser"
                           Cursor="Hand"/>
                </Border>
                <Border Background="#3B82F6"
                       CornerRadius="8"
                       Padding="12,8"
                       Height="40"
                       Cursor="Hand">
                    <Button Background="Transparent"
                           BorderThickness="0"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Medium"
                           Padding="0"
                           Content="ğŸ‘¤ Nouvel Utilisateur"
                           Command="{Binding AddUserCommand}"
                           Cursor="Hand"/>
                </Border>
            </StackPanel>
        </Grid>

            <!-- BARRE DE FILTRES -->
            <Border Background="#FFFFFF" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
            
            <WrapPanel Orientation="Horizontal">
                <!-- Recherche -->
                <Border Background="#F8FAFC" 
                       CornerRadius="8" 
                       Height="40" 
                       Width="400"
                       Margin="0,0,16,0"
                       Padding="12,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ğŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Foreground="#475569"
                                VerticalContentAlignment="Center"
                                Width="300"/>
                    </StackPanel>
                </Border>
                
                <!-- Filtre par rÃ´le -->
                <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock Text="ğŸ‘¤" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding SelectedRole}"
                              Width="160"
                              Height="36"
                              FontSize="13"
                              Background="#FFFFFF"
                              BorderBrush="#E2E8F0"
                              BorderThickness="1"
                              Padding="10,0"
                              VerticalContentAlignment="Center"/>
                </StackPanel>
                
                <!-- Bouton RÃ©initialiser -->
                <Border Background="#F8FAFC"
                       BorderBrush="#E2E8F0"
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="10,8"
                       Height="40"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Button Background="Transparent"
                           BorderThickness="0"
                           Foreground="#475569"
                           FontSize="13"
                           Padding="0"
                           Content="â†º RÃ©initialiser"
                           Command="{Binding ResetFiltersCommand}"
                           Cursor="Hand"/>
                </Border>
            </WrapPanel>
        </Border>

            <!-- LISTE DES UTILISATEURS -->
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCard}" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar de l'utilisateur -->
                                <Border Grid.Column="0" 
                                        Width="80" 
                                        Height="80" 
                                        Margin="0,0,20,0"
                                        CornerRadius="40"
                                        ClipToBounds="True">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#6366F1" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <!-- Image avec recadrage circulaire parfait -->
                                        <Ellipse Width="80" 
                                                Height="80"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource UserImagePathConverter}}"
                                                           Stretch="UniformToFill"
                                                           AlignmentX="Center"
                                                           AlignmentY="Center"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        
                                        <!-- IcÃ´ne par dÃ©faut -->
                                        <TextBlock Text="ğŸ‘¤" 
                                                  FontSize="40" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Opacity="0.4">
                                            <TextBlock.Visibility>
                                                <Binding Path="ImagePath">
                                                    <Binding.Converter>
                                                        <helpers:NullToVisibilityConverter/>
                                                    </Binding.Converter>
                                                    <Binding.ConverterParameter>Inverse</Binding.ConverterParameter>
                                                </Binding>
                                            </TextBlock.Visibility>
                                        </TextBlock>
                                    </Grid>
                                </Border>

                                <!-- Informations de l'utilisateur -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nom et RÃ´le -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding FullName}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1E293B"
                                                   VerticalAlignment="Center"/>
                                        
                                        <!-- Badge de rÃ´le -->
                                        <Border Margin="12,0,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="12"/>
                                                    <Setter Property="Padding" Value="10,5"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                            <Setter Property="Background" Value="#DBEAFE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="User">
                                                            <Setter Property="Background" Value="#D1FAE5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Role}" 
                                                       FontSize="12" 
                                                       FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                                <Setter Property="Foreground" Value="#DC2626"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                                <Setter Property="Foreground" Value="#2563EB"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="User">
                                                                <Setter Property="Foreground" Value="#059669"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>

                                        <!-- Badge de statut actif -->
                                        <Border Background="#D1FAE5" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="8,0,0,0">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="6" Height="6" Fill="#059669" Margin="0,0,6,0"/>
                                                <TextBlock Text="Actif" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#059669"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Nom d'utilisateur -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding Username}" 
                                               FontSize="16" 
                                               FontWeight="Medium"
                                               Foreground="#64748B" 
                                               Margin="0,0,0,8"/>

                                    <!-- DÃ©tails de l'utilisateur -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ğŸ“§" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Email}" 
                                                           FontSize="13" 
                                                           Foreground="#475569"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ğŸ“…" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" Foreground="#475569">
                                                    <Run Text="CrÃ©Ã© le"/>
                                                    <Run Text="{Binding CreatedAt, StringFormat=dd/MM/yyyy}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Boutons d'action -->
                                <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center"
                                           Orientation="Horizontal">
                                    <Button Content="âœï¸ Modifier"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            ToolTip="Modifier l'utilisateur"/>
                                    <Button Content="ğŸ—‘ï¸ Supprimer"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButton}"
                                            ToolTip="Supprimer l'utilisateur"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
