<UserControl x:Class="FleetManager.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ‘¥ Gestion des Utilisateurs" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#1976D2"/>
                    <TextBlock Text="GÃ©rer les comptes utilisateurs et leurs permissions" 
                               FontSize="14" Foreground="#666" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="âž• Nouvel Utilisateur" 
                        Command="{Binding AddUserCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Width="180" Height="45"
                        FontSize="14"/>
            </Grid>
        </Border>

        <!-- Filtres et recherche -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recherche -->
                    <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" 
                            CornerRadius="4" Background="White" Padding="10" Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" 
                                     VerticalAlignment="Center"
                                     FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Rechercher par nom ou email..." 
                                                                          Foreground="#999" FontSize="14"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Filtre rÃ´le -->
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding SelectedRole}"
                              Height="40" Margin="0,0,10,0"/>

                    <!-- Filtre statut -->
                    <ComboBox Grid.Column="2" 
                              ItemsSource="{Binding StatusList}"
                              SelectedItem="{Binding SelectedStatus}"
                              Height="40" Margin="0,0,10,0"/>

                    <!-- Boutons d'action -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="ðŸ”„ RafraÃ®chir" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Width="120" Height="40" Margin="0,0,5,0"/>
                        <Button Content="ðŸ—‘ï¸ RÃ©initialiser" 
                                Command="{Binding ResetFiltersCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Width="130" Height="40"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Liste des utilisateurs -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistiques -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="15,10" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="Total Utilisateurs" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding TotalUsers}" FontSize="24" FontWeight="Bold" 
                                      Foreground="#1976D2" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="15,10" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="Actifs" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding ActiveUsers}" FontSize="24" FontWeight="Bold" 
                                      Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="6" Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="Administrateurs" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding AdminUsers}" FontSize="24" FontWeight="Bold" 
                                      Foreground="#FF9800" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nom d'utilisateur" Binding="{Binding Username}" Width="150"/>
                        <DataGridTextColumn Header="Nom complet" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                        
                        <DataGridTemplateColumn Header="RÃ´le" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E3F2FD"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                        <Setter Property="Background" Value="#F3E5F5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Role}" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#1976D2"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                            <Setter Property="Foreground" Value="#7B1FA2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Statut" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Actif"/>
                                                    <Setter Property="Foreground" Value="#388E3C"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Text" Value="Inactif"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="CrÃ©ation" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy'}" Width="100"/>
                        <DataGridTextColumn Header="DerniÃ¨re connexion" Binding="{Binding LastLogin, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>

                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button ToolTip="Voir les dÃ©tails"
                                                Command="{Binding DataContext.ViewUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="35" Height="30" Margin="2">
                                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                        </Button>
                                        <Button ToolTip="Modifier"
                                                Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="35" Height="30" Margin="2">
                                            <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                        </Button>
                                        <Button ToolTip="RÃ©initialiser mot de passe"
                                                Command="{Binding DataContext.ResetPasswordCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="35" Height="30" Margin="2">
                                            <TextBlock Text="&#xE192;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                        </Button>
                                        <Button ToolTip="Supprimer"
                                                Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="35" Height="30" Margin="2">
                                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.Style>
                        <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Users.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>

                <!-- Message si aucun utilisateur -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Users.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="ðŸ‘¤" FontSize="64" HorizontalAlignment="Center" Foreground="#DDD"/>
                    <TextBlock Text="Aucun utilisateur trouvÃ©" FontSize="18" Foreground="#999" 
                              HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Loader -->
                <Border Grid.Row="1" Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Chargement..." FontSize="16" 
                                  Foreground="#1976D2" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
