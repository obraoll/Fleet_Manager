<Window x:Class="FleetManager.Views.NotificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:FleetManager.Helpers"
        Title="ðŸ”” Notifications"
        Width="520"
        Height="650"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <helpers:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
        <helpers:AlertIconConverter x:Key="AlertIconConverter"/>
        <helpers:PriorityColorConverter x:Key="PriorityColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" 
                Background="#FFFFFF" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Notifications" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="#0F172A"/>
                    
                    <Border Background="#EF4444"
                            CornerRadius="12"
                            Padding="8,4"
                            Margin="12,0,0,0"
                            Visibility="{Binding VisibleAlerts.Count, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding VisibleAlerts.Count}"
                                  Foreground="White"
                                  FontSize="12"
                                  FontWeight="Bold"/>
                    </Border>

                    <TextBlock Text="Aucune notification" 
                              FontSize="14" 
                              Foreground="#94A3B8"
                              Margin="12,0,0,0"
                              Visibility="{Binding VisibleAlerts.Count, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Supprimer tout"
                        Command="{Binding DeleteAllAlertsCommand}"
                        Visibility="{Binding VisibleAlerts.Count, Converter={StaticResource BoolToVisibility}}"
                        Background="#EF4444"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"
                        FontSize="12"
                        FontWeight="Medium"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Liste des notifications -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="0">
            <ItemsControl ItemsSource="{Binding VisibleAlerts}" 
                         Margin="20,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF"
                               BorderBrush="#E2E8F0"
                               BorderThickness="1"
                               CornerRadius="8"
                               Padding="16"
                               Margin="0,0,0,12"
                               Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="#0F172A"
                                              Margin="0,0,0,4"
                                              TextWrapping="Wrap">
                                        <Run Text="{Binding Type, Converter={StaticResource AlertIconConverter}}"/>
                                        <Run Text="{Binding Title}"/>
                                    </TextBlock>
                                    
                                    <TextBlock Text="{Binding Message}" 
                                              FontSize="12" 
                                              Foreground="#64748B"
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,8"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Border CornerRadius="4"
                                               Padding="6,2"
                                               Margin="0,0,8,0">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Priority, Converter={StaticResource PriorityColorConverter}}"/>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Priority}"
                                                      FontSize="10"
                                                      FontWeight="Medium"
                                                      Foreground="White"/>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding Date, Converter={StaticResource RelativeTimeConverter}}"
                                                  FontSize="10"
                                                  Foreground="#94A3B8"/>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1"
                                       Command="{Binding DataContext.DeleteAlertCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                       CommandParameter="{Binding}"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Padding="8"
                                       Cursor="Hand"
                                       ToolTip="Supprimer"
                                       VerticalAlignment="Top">
                                    <TextBlock Text="âœ•" 
                                              FontSize="18" 
                                              Foreground="#94A3B8"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Message vide -->
        <StackPanel Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding VisibleAlerts.Count, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
            <TextBlock Text="ðŸ“¬"
                      FontSize="48"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,16"/>
            <TextBlock Text="Aucune notification pour le moment."
                      FontSize="14"
                      Foreground="#94A3B8"
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Pied de page -->
        <Border Grid.Row="2" 
                Background="#FFFFFF" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,1,0,0"
                Padding="20,12">
            <Button Content="Fermer"
                   HorizontalAlignment="Right"
                   Width="100"
                   Height="36"
                   Background="#3B82F6"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="14"
                   FontWeight="Medium"
                   Cursor="Hand"
                   Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</Window>

