<UserControl x:Class="FleetManager.Views.VehiclesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:FleetManager.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F8FAFC">

    <UserControl.Resources>
        <helpers:VehicleImagePathConverter x:Key="VehicleImagePathConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- EN-TÃŠTE Dashboard Style -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="VÃ©hicules" 
                              FontFamily="Inter, Segoe UI"
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#0F172A" 
                              Margin="0,0,0,6"/>
                    <TextBlock Text="GÃ©rez votre flotte de vÃ©hicules" 
                              FontSize="14" 
                              Foreground="#64748B"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="Transparent"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Margin="0,0,12,0"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="14"
                               Padding="0"
                               Content="ðŸ”„ Actualiser"
                               Command="{Binding LoadVehiclesCommand}"
                               Cursor="Hand"/>
                    </Border>
                    <Border Background="#3B82F6"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               Padding="0"
                               Content="âž• Nouveau VÃ©hicule"
                               Command="{Binding AddVehicleCommand}"
                               Cursor="Hand"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- BARRE DE RECHERCHE ET FILTRES -->
            <Border Background="#FFFFFF" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <Border Background="#F8FAFC" 
                           CornerRadius="8" 
                           Height="40" 
                           Width="400"
                           Margin="0,0,16,0"
                           Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="#475569"
                                    VerticalContentAlignment="Center"
                                    Width="300"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#F8FAFC"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="10,8"
                           Height="40"
                           Margin="0,0,16,0"
                           VerticalAlignment="Center"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="13"
                               Padding="0"
                               Content="â†º RÃ©initialiser"
                               Command="{Binding ResetFiltersCommand}"
                               Cursor="Hand"/>
                    </Border>
                </WrapPanel>
            </Border>

            <!-- LISTE DES VÃ‰HICULES EN CARTES -->
            <ItemsControl ItemsSource="{Binding Vehicles}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" 
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1" 
                               CornerRadius="12" 
                               Padding="0"
                               Margin="0,0,12,12"
                               Width="320"
                               Cursor="Hand">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#3B82F6" Opacity="0.15" BlurRadius="16" ShadowDepth="6"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <StackPanel>
                                <!-- Image du vÃ©hicule -->
                                <Border Height="160" 
                                       Background="#F1F5F9" 
                                       CornerRadius="12,12,0,0"
                                       ClipToBounds="True">
                                    <Grid>
                                        <Image Source="{Binding ImagePath, Converter={StaticResource VehicleImagePathConverter}}"
                                              Stretch="UniformToFill"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="{Binding ImagePath, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <TextBlock Text="ðŸš—" 
                                                  FontSize="72" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Opacity="0.4"
                                                  Visibility="{Binding ImagePath, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    </Grid>
                                </Border>

                                <!-- DÃ©tails du vÃ©hicule -->
                                <StackPanel Margin="16">
                                    <TextBlock FontSize="15" 
                                              FontWeight="SemiBold" 
                                              Foreground="#0F172A" 
                                              Margin="0,0,0,10">
                                        <Run Text="{Binding Brand}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding Model}"/>
                                    </TextBlock>
                                    
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Type" 
                                                      FontSize="11" 
                                                      Foreground="#94A3B8" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding VehicleType}" 
                                                      FontSize="13" 
                                                      FontWeight="Medium" 
                                                      Foreground="#0F172A"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Carburant" 
                                                      FontSize="11" 
                                                      Foreground="#94A3B8" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding FuelType}" 
                                                      FontSize="13" 
                                                      FontWeight="Medium" 
                                                      Foreground="#0F172A"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Margin="0,4,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Background="#EFF6FF" 
                                               BorderBrush="#3B82F6" 
                                               BorderThickness="1" 
                                               CornerRadius="6" 
                                               Padding="8,6"
                                               HorizontalAlignment="Stretch">
                                            <TextBlock Text="{Binding Status}" 
                                                      FontSize="12" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#3B82F6"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Column="1" 
                                                  FontSize="13" 
                                                  Foreground="#64748B"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0">
                                            <Run Text="{Binding RegistrationNumber}"/>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Boutons d'action -->
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Stretch">
                                        <Border Background="#F8FAFC"
                                               BorderBrush="#E2E8F0"
                                               BorderThickness="1"
                                               CornerRadius="6"
                                               Padding="10,8"
                                               Margin="0,0,8,0"
                                               Cursor="Hand"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center">
                                            <Button Background="Transparent"
                                                   BorderThickness="0"
                                                   Foreground="#475569"
                                                   FontSize="13"
                                                   Padding="0"
                                                   Content="âœï¸ Modifier"
                                                   Command="{Binding DataContext.EditVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Cursor="Hand"/>
                                        </Border>
                                        <Border Background="#FEF2F2"
                                               BorderBrush="#FCA5A5"
                                               BorderThickness="1"
                                               CornerRadius="6"
                                               Padding="10,8"
                                               Cursor="Hand"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Center">
                                            <Button Background="Transparent"
                                                   BorderThickness="0"
                                                   Foreground="#DC2626"
                                                   FontSize="13"
                                                   Padding="0"
                                                   Content="ðŸ—‘ï¸ Supprimer"
                                                   Command="{Binding DataContext.DeleteVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   Cursor="Hand"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                    </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
