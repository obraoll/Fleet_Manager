                            <Ellipse Width="32" Height="32" Fill="#3B82F6" Margin="0,0,8,0">
                                <Ellipse.Clip>
                                    <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                                </Ellipse.Clip>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUserName}" 
                                          FontSize="14" 
                                          FontWeight="SemiBold" 
                                          Foreground="#0F172A"/>
                                <TextBlock Text="{Binding CurrentUserRole}" 
                                          FontSize="12" 
                                          Foreground="#94A3B8"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Bouton Export -->
                        <Border Background="#3B82F6"
                                CornerRadius="8"
                                Padding="16,0"
                                Height="40"
                                Cursor="Hand"
                                x:Name="ExportButtonBorder">
                            <Button Content="Export"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="0"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Cursor="Hand"
                                    Command="{Binding ExportCommand}"
                                    CommandParameter="{Binding ElementName=ExportButtonBorder}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <ContentPresenter/>
                                                <TextBlock Text="â–¼" FontSize="10" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- CONTENU PRINCIPAL -->
            <Border Grid.Row="1" Background="#F8FAFC">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>

