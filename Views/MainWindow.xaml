                                        Background="Transparent"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Cursor="Hand"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ======================================================================================== -->
        <!-- ZONE CENTRALE (Header + Contenu) -->
        <!-- ======================================================================================== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>  <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Contenu -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="#FFFFFF" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="0,0,0,1">
                <Grid Margin="24,0">
                    <Grid.ColumnDefinitions>
