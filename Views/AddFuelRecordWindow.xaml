<Window x:Class="FleetManager.Views.AddFuelRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:FleetManager.Models"
        mc:Ignorable="d"
        Title="Ajouter un plein de carburant"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0"
                   Text="⛽ Ajouter un plein de carburant"
                   Style="{StaticResource TitleStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>

                    <!-- Section Véhicule -->
                    <TextBlock Text="Sélection du véhicule"
                               Style="{StaticResource SubtitleStyle}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Véhicule -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Véhicule *" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="0" Grid.Column="2"
                                  ItemsSource="{Binding AvailableVehicles}"
                                  SelectedItem="{Binding SelectedVehicle}"
                                  DisplayMemberPath="DisplayName"
                                  ToolTip="Sélectionner le véhicule"/>

                        <!-- Kilométrage actuel -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Kilométrage actuel *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="2"
                                 Text="{Binding CurrentMileage, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Kilométrage au moment du plein"/>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Carburant -->
                    <TextBlock Text="Informations sur le carburant"
                               Style="{StaticResource SubtitleStyle}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Type de carburant -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Type de carburant *" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="0" Grid.Column="2"
                                  SelectedItem="{Binding FuelType}">
                            <ComboBox.Items>
                                <models:FuelType>Essence</models:FuelType>
                                <models:FuelType>Diesel</models:FuelType>
                                <models:FuelType>GPL</models:FuelType>
                                <models:FuelType>Electrique</models:FuelType>
                                <models:FuelType>Hybride</models:FuelType>
                            </ComboBox.Items>
                        </ComboBox>

                        <!-- Quantité -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Quantité (litres) *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="2"
                                 Text="{Binding QuantityLiters, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Quantité de carburant en litres"/>

                        <!-- Prix par litre -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Prix par litre (€) *" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="2" Grid.Column="2"
                                 Text="{Binding PricePerLiter, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Prix unitaire du carburant"/>

                        <!-- Coût total -->
                        <Label Grid.Row="3" Grid.Column="0" Content="Coût total (€)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="3" Grid.Column="2"
                                 Text="{Binding TotalCost, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 ToolTip="Calculé automatiquement"/>

                        <!-- Date du plein -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Date du plein *" FontWeight="SemiBold"/>
                        <DatePicker Grid.Row="4" Grid.Column="2"
                                    SelectedDate="{Binding RefuelDate}"
                                    DisplayDateEnd="{x:Static sys:DateTime.Now}"
                                    xmlns:sys="clr-namespace:System;assembly=System.Runtime"/>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Station -->
                    <TextBlock Text="Informations station-service"
                               Style="{StaticResource SubtitleStyle}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nom de la station -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Station-service" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="2"
                                 Text="{Binding StationName, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Nom de la station-service"/>

                        <!-- Plein complet -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Type de plein" FontWeight="SemiBold"/>
                        <CheckBox Grid.Row="1" Grid.Column="2"
                                  IsChecked="{Binding IsFullTank}"
                                  Content="Plein complet"
                                  VerticalAlignment="Center"
                                  ToolTip="Cocher si le réservoir a été rempli complètement"/>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Consommation -->
                    <TextBlock Text="Calculs de consommation"
                               Style="{StaticResource SubtitleStyle}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Distance parcourue -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Distance parcourue (km)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="0" Grid.Column="2"
                                 Text="{Binding DistanceTraveled}"
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 ToolTip="Calculé automatiquement depuis le dernier plein"/>

                        <!-- Consommation -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Consommation (L/100km)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="2"
                                 Text="{Binding FuelConsumption}"
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 ToolTip="Calculé automatiquement"/>
                    </Grid>

                    <!-- Section Notes -->
                    <Separator Margin="0,20"/>

                    <TextBlock Text="Remarques"
                               Style="{StaticResource SubtitleStyle}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Label Content="Notes / Commentaires" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="Remarques sur ce plein"/>

                    <!-- Messages de validation -->
                    <TextBlock Text="{Binding ValidationMessage}"
                               Foreground="{StaticResource DangerBrush}"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"
                               Visibility="{Binding HasValidationError, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuler"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,10,0"/>

            <Button Content="Enregistrer le plein"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource PrimaryButton}"
                    Width="170"
                    IsEnabled="{Binding CanSave}"/>
        </StackPanel>
    </Grid>
</Window>
