<UserControl x:Class="FleetManager.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:FleetManager.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F8FAFC">

    <UserControl.Resources>
        <helpers:VehicleImagePathConverter x:Key="VehicleImagePathConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- EN-TÃŠTE Dashboard Style -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Maintenance" 
                              FontFamily="Inter, Segoe UI"
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#0F172A" 
                              Margin="0,0,0,6"/>
                    <TextBlock Text="GÃ©rez les opÃ©rations de maintenance de votre flotte" 
                              FontSize="14" 
                              Foreground="#64748B"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="Transparent"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Margin="0,0,12,0"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="14"
                               Padding="0"
                               Content="ðŸ”„ Actualiser"
                               Command="{Binding RefreshCommand}"
                               Cursor="Hand"/>
                    </Border>
                    <Border Background="#3B82F6"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               Padding="0"
                               Content="ðŸ”§ Nouvelle Maintenance"
                               Command="{Binding AddMaintenanceCommand}"
                               Cursor="Hand"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- BARRE DE FILTRES -->
            <Border Background="#FFFFFF" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <!-- Recherche -->
                    <Border Background="#F8FAFC" 
                           CornerRadius="8" 
                           Height="40" 
                           Width="400"
                           Margin="0,0,16,0"
                           Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="#475569"
                                    VerticalContentAlignment="Center"
                                    Width="300"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸš—" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding Vehicles}"
                                  SelectedItem="{Binding SelectedVehicle}"
                                  DisplayMemberPath="RegistrationNumber"
                                  Width="160"
                                  Height="36"
                                  FontSize="13"
                                  Background="#FFFFFF"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="1"
                                  Padding="10,0"
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”§" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding MaintenanceTypes}"
                                  SelectedItem="{Binding SelectedMaintenanceType}"
                                  Width="180"
                                  Height="36"
                                  FontSize="13"
                                  Background="#FFFFFF"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="1"
                                  Padding="10,0"
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <Border Background="#F8FAFC"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="10,8"
                           Height="40"
                           VerticalAlignment="Center"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="13"
                               Padding="0"
                               Content="â†º RÃ©initialiser"
                               Command="{Binding ResetFiltersCommand}"
                               Cursor="Hand"/>
                    </Border>
                </WrapPanel>
            </Border>

            <!-- LISTE DES MAINTENANCES -->
            <ItemsControl ItemsSource="{Binding MaintenanceRecords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" 
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1" 
                               CornerRadius="12" 
                               Padding="16"
                               Margin="0,0,0,12"
                               Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image du vÃ©hicule ou icÃ´ne de maintenance -->
                                <Border Grid.Column="0" 
                                        Width="80" 
                                        Height="80" 
                                        Background="#F59E0B"
                                        CornerRadius="12" 
                                        Margin="0,0,20,0"
                                        ClipToBounds="True">
                                    <Grid>
                                        <Image Source="{Binding Vehicle.ImagePath, Converter={StaticResource VehicleImagePathConverter}}"
                                              Stretch="UniformToFill"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="{Binding Vehicle.ImagePath, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <TextBlock Text="ðŸ”§" 
                                                   FontSize="40" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Vehicle.ImagePath, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    </Grid>
                                </Border>

                                <!-- Informations de la maintenance -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- VÃ©hicule et Date -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding VehicleRegistration}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1E293B"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Border Background="#EEF2FF" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="12,0,0,0">
                                            <TextBlock Text="{Binding MaintenanceRecord.MaintenanceDate, StringFormat=dd/MM/yyyy}" 
                                                       FontSize="13" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#6366F1"/>
                                        </Border>

                                        <!-- Badge de statut -->
                                        <Border Margin="8,0,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                    <Setter Property="Padding" Value="8,4"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="Pending">
                                                            <Setter Property="Background" Value="#FEF3C7"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="InProgress">
                                                            <Setter Property="Background" Value="#DBEAFE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="Completed">
                                                            <Setter Property="Background" Value="#D1FAE5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" 
                                                       FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="Pending">
                                                                <Setter Property="Text" Value="â° En attente"/>
                                                                <Setter Property="Foreground" Value="#D97706"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="InProgress">
                                                                <Setter Property="Text" Value="âš™ï¸ En cours"/>
                                                                <Setter Property="Foreground" Value="#2563EB"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding MaintenanceRecord.Status}" Value="Completed">
                                                                <Setter Property="Text" Value="âœ… TerminÃ©e"/>
                                                                <Setter Property="Foreground" Value="#059669"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <!-- Type et Description -->
                                    <TextBlock Grid.Row="1" 
                                               Margin="0,0,0,8">
                                        <Run Text="{Binding MaintenanceRecord.MaintenanceType}" 
                                             FontSize="16" 
                                             FontWeight="SemiBold" 
                                             Foreground="#475569"/>
                                        <Run Text="â€¢" 
                                             Foreground="#CBD5E1"/>
                                        <Run Text="{Binding MaintenanceRecord.Description}" 
                                             FontSize="16" 
                                             Foreground="#64748B"/>
                                    </TextBlock>

                                    <!-- DÃ©tails de la maintenance -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ’°" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" 
                                                           FontWeight="Bold"
                                                           Foreground="#475569">
                                                    <Run Text="{Binding MaintenanceRecord.Cost, StringFormat=N2}"/>
                                                    <Run Text="â‚¬"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" Foreground="#475569">
                                                    <Run Text="{Binding MaintenanceRecord.Mileage, StringFormat=N0}"/>
                                                    <Run Text="km"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ‘¤" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding MaintenanceRecord.PerformedBy}" 
                                                           FontSize="13" 
                                                           Foreground="#475569"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Boutons d'action -->
                                <StackPanel Grid.Column="2" 
                                           Orientation="Horizontal"
                                           VerticalAlignment="Center">
                                    <Button Content="âœï¸ Modifier"
                                            Command="{Binding DataContext.EditMaintenanceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            ToolTip="Modifier cet enregistrement"/>
                                    <Button Content="ðŸ—‘ï¸ Supprimer"
                                            Command="{Binding DataContext.DeleteMaintenanceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButton}"
                                            ToolTip="Supprimer cet enregistrement"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                    </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>


