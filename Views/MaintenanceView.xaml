<UserControl x:Class="FleetManager.Views.MaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tÃªte -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ”§ Gestion des Entretiens" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#1976D2"/>
                    <TextBlock Text="Suivi complet des maintenances du parc automobile" 
                               FontSize="14" Foreground="#666" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="âž• Nouvel Entretien" 
                        Command="{Binding AddMaintenanceCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Width="180" Height="45"
                        FontSize="14"/>
            </Grid>
        </Border>

        <!-- Filtres et recherche -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ligne 1 : Recherche et filtres principaux -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recherche -->
                    <Border Grid.Column="0" Background="#F5F5F5" 
                            CornerRadius="5" Padding="10" Margin="0,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     Background="Transparent" BorderThickness="0"
                                     VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Rechercher (vÃ©hicule, type, garage...)" 
                                                                          Foreground="#999" FontSize="14"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Filtre vÃ©hicule -->
                    <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding Vehicles}"
                              SelectedItem="{Binding SelectedVehicle}"
                              DisplayMemberPath="DisplayName"
                              Height="40" Margin="0,0,10,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Style.Triggers>
                                    <Trigger Property="SelectedItem" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="#999"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>

                    <!-- Filtre type -->
                    <ComboBox Grid.Column="2" 
                              ItemsSource="{Binding MaintenanceTypes}"
                              SelectedItem="{Binding SelectedMaintenanceType}"
                              Height="40" Margin="0,0,10,0"/>

                    <!-- Boutons d'action -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button Content="ðŸ”„ RafraÃ®chir" 
                                Command="{Binding RefreshCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Width="120" Height="40" Margin="0,0,5,0"/>
                        <Button Content="ðŸ—‘ï¸ RÃ©initialiser" 
                                Command="{Binding ResetFiltersCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Width="130" Height="40"/>
                    </StackPanel>
                </Grid>

                <!-- Ligne 2 : Filtres de date et statut -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="De:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker Grid.Column="1" 
                                SelectedDate="{Binding StartDate}"
                                FirstDayOfWeek="Monday" Height="35"/>

                    <TextBlock Grid.Column="2" Text="Ã€:" 
                               VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <DatePicker Grid.Column="3" 
                                SelectedDate="{Binding EndDate}"
                                FirstDayOfWeek="Monday" Height="35"/>

                    <!-- Statistiques -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="20,0,0,0">
                        <Border Background="#E3F2FD" CornerRadius="5" Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TotalMaintenances}" FontWeight="Bold" Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FFF3E0" CornerRadius="5" Padding="15,8" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="CoÃ»t total:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding TotalCost, StringFormat='{}{0:C}'}" 
                                          FontWeight="Bold" Foreground="#E65100"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Export -->
                    <Button Grid.Column="5" Content="ðŸ“Š Exporter" 
                            Command="{Binding ExportCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Width="120" Height="35" Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Liste des entretiens -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- En-tÃªte du tableau -->
                <TextBlock Grid.Row="0" Text="Liste des entretiens" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="#333" Margin="0,0,0,15"/>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding MaintenanceRecords}"
                          SelectedItem="{Binding SelectedMaintenance}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          AlternatingRowBackground="#F9F9F9"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          RowHeight="45">
                    
                    <DataGrid.Columns>
                        <!-- Date -->
                        <DataGridTextColumn Header="ðŸ“… Date" 
                                          Binding="{Binding MaintenanceDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="110"/>

                        <!-- VÃ©hicule -->
                        <DataGridTemplateColumn Header="ðŸš— VÃ©hicule" Width="*" MinWidth="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding VehicleRegistration}" 
                                                  FontWeight="SemiBold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding VehicleName}" 
                                                  Foreground="#666" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Type -->
                        <DataGridTextColumn Header="ðŸ”§ Type" 
                                          Binding="{Binding MaintenanceType}" 
                                          Width="140"/>

                        <!-- KilomÃ©trage -->
                        <DataGridTextColumn Header="ðŸ“ KilomÃ©trage" 
                                          Binding="{Binding Mileage, StringFormat='{}{0:N0} km'}" 
                                          Width="120"/>

                        <!-- CoÃ»t -->
                        <DataGridTextColumn Header="ðŸ’° CoÃ»t" 
                                          Binding="{Binding Cost, StringFormat='{}{0:C}'}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#E65100"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Garage -->
                        <DataGridTextColumn Header="ðŸª Garage" 
                                          Binding="{Binding Garage}" 
                                          Width="130"/>

                        <!-- Statut -->
                        <DataGridTemplateColumn Header="ðŸ“Š Statut" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="8,3" 
                                            HorizontalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="TerminÃ©e">
                                                        <Setter Property="Background" Value="#C8E6C9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="En cours">
                                                        <Setter Property="Background" Value="#FFE082"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="PlanifiÃ©e">
                                                        <Setter Property="Background" Value="#B3E5FC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" 
                                                  FontSize="11" FontWeight="SemiBold"
                                                  Foreground="#333"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="ðŸ‘ï¸ Voir" 
                                                Command="{Binding DataContext.ViewMaintenanceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="60" Height="30" Margin="2"/>
                                        <Button Content="âœï¸ Modifier" 
                                                Command="{Binding DataContext.EditMaintenanceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SecondaryButton}"
                                                Width="70" Height="30" Margin="2"/>
                                        <Button Content="ðŸ—‘ï¸" 
                                                Command="{Binding DataContext.DeleteMaintenanceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Background="#FFCDD2"
                                                Width="35" Height="30" Margin="2"
                                                ToolTip="Supprimer"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Message si vide -->
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding MaintenanceRecords.Count}" Value="0">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None">
                                                <VisualBrush.Visual>
                                                    <Border Background="White" Padding="20">
                                                        <TextBlock Text="Aucun entretien trouvÃ© ðŸ“­" 
                                                                  FontSize="16" Foreground="#999" 
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                    </Border>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>

                <!-- Loader -->
                <Border Grid.Row="1" Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Chargement..." FontSize="16" 
                                  Foreground="#1976D2" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>


