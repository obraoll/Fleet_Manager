<Window x:Class="FleetManager.Views.AddVehicleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:FleetManager.Models"
        xmlns:helpers="clr-namespace:FleetManager.Helpers"
        mc:Ignorable="d"
        Title="Ajouter un vÃ©hicule"
        Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0"
                   Text="ðŸš— Ajouter un nouveau vÃ©hicule"
                   Style="{StaticResource H2}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Style="{StaticResource ModernCard}">
                <StackPanel>

                    <!-- Section Informations gÃ©nÃ©rales -->
                    <TextBlock Text="Informations gÃ©nÃ©rales"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Immatriculation -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Immatriculation *" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Row="0" Grid.Column="2"
                                 Text="{Binding RegistrationNumber, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 ToolTip="Ex: AB-123-CD"/>

                        <!-- Marque et ModÃ¨le -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Marque *" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Row="1" Grid.Column="2"
                                 Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 ToolTip="Ex: Renault, Peugeot, Ford..."/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="ModÃ¨le *" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Row="2" Grid.Column="2"
                                 Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 ToolTip="Ex: Clio, 308, Focus..."/>

                        <!-- AnnÃ©e -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="AnnÃ©e *" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Row="3" Grid.Column="2"
                                 Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 ToolTip="Ex: 2023"/>

                        <!-- VIN -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="NÂ° VIN" Style="{StaticResource FormLabel}"/>
                        <TextBox Grid.Row="4" Grid.Column="2"
                                 Text="{Binding VIN, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 ToolTip="NumÃ©ro d'identification du vÃ©hicule (17 caractÃ¨res)"/>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section CaractÃ©ristiques techniques -->
                    <TextBlock Text="CaractÃ©ristiques techniques"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Type de vÃ©hicule -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Type de vÃ©hicule *" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="0" Grid.Column="2"
                                  SelectedItem="{Binding VehicleType}">
                            <ComboBox.Items>
                                <models:VehicleType>Voiture</models:VehicleType>
                                <models:VehicleType>Camion</models:VehicleType>
                                <models:VehicleType>Moto</models:VehicleType>
                                <models:VehicleType>Utilitaire</models:VehicleType>
                            </ComboBox.Items>
                        </ComboBox>

                        <!-- Type de carburant -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Type de carburant *" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="1" Grid.Column="2"
                                  SelectedItem="{Binding FuelType}">
                            <ComboBox.Items>
                                <models:FuelType>Essence</models:FuelType>
                                <models:FuelType>Diesel</models:FuelType>
                                <models:FuelType>Electrique</models:FuelType>
                                <models:FuelType>Hybride</models:FuelType>
                                <models:FuelType>GPL</models:FuelType>
                            </ComboBox.Items>
                        </ComboBox>

                        <!-- KilomÃ©trage initial -->
                        <Label Grid.Row="2" Grid.Column="0" Content="KilomÃ©trage initial" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="2" Grid.Column="2"
                                 Text="{Binding CurrentMileage, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="KilomÃ©trage actuel du vÃ©hicule"/>

                        <!-- CapacitÃ© du rÃ©servoir -->
                        <Label Grid.Row="3" Grid.Column="0" Content="CapacitÃ© rÃ©servoir (L)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="3" Grid.Column="2"
                                 Text="{Binding FuelTankCapacity, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="CapacitÃ© du rÃ©servoir en litres"/>

                        <!-- Consommation moyenne -->
                        <Label Grid.Row="4" Grid.Column="0" Content="Consommation moy. (L/100km)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="4" Grid.Column="2"
                                 Text="{Binding AverageFuelConsumption, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Consommation moyenne estimÃ©e"/>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Acquisition -->
                    <TextBlock Text="Informations d'acquisition"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Date d'acquisition -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Date d'acquisition" FontWeight="SemiBold"/>
                        <DatePicker Grid.Row="0" Grid.Column="2"
                                    SelectedDate="{Binding AcquisitionDate}"
                                    DisplayDateEnd="{x:Static sys:DateTime.Now}"
                                    xmlns:sys="clr-namespace:System;assembly=System.Runtime"/>

                        <!-- Prix d'achat -->
                        <Label Grid.Row="1" Grid.Column="0" Content="Prix d'achat (â‚¬)" FontWeight="SemiBold"/>
                        <TextBox Grid.Row="1" Grid.Column="2"
                                 Text="{Binding PurchasePrice, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Prix d'acquisition du vÃ©hicule"/>

                        <!-- Statut -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Statut initial *" FontWeight="SemiBold"/>
                        <ComboBox Grid.Row="2" Grid.Column="2"
                                  SelectedItem="{Binding Status}">
                            <ComboBox.Items>
                                <models:VehicleStatus>Actif</models:VehicleStatus>
                                <models:VehicleStatus>EnMaintenance</models:VehicleStatus>
                                <models:VehicleStatus>HorsService</models:VehicleStatus>
                            </ComboBox.Items>
                        </ComboBox>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Image -->
                    <TextBlock Text="Photo du vÃ©hicule"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- AperÃ§u de l'image -->
                        <Border Grid.Row="0"
                                Width="300"
                                Height="200"
                                Background="#F1F5F9"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1"
                                CornerRadius="8"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,12">
                            <Grid>
                                <Image Source="{Binding SelectedImagePreview}"
                                       Stretch="UniformToFill"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,0,300,200" RadiusX="8" RadiusY="8"/>
                                    </Image.Clip>
                                </Image>
                                <TextBlock Text="Aucune image sÃ©lectionnÃ©e"
                                          FontSize="12"
                                          Foreground="#94A3B8"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                    <TextBlock.Visibility>
                                        <Binding Path="SelectedImagePreview">
                                            <Binding.Converter>
                                                <helpers:NullToVisibilityConverter/>
                                            </Binding.Converter>
                                            <Binding.ConverterParameter>Inverse</Binding.ConverterParameter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Boutons pour gÃ©rer l'image -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="ðŸ“· SÃ©lectionner une image"
                                    Command="{Binding SelectImageCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="180"
                                    Margin="0,0,8,0"/>
                            <Button Content="ðŸ—‘ï¸ Supprimer"
                                    Command="{Binding RemoveImageCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Width="120">
                                <Button.Visibility>
                                    <Binding Path="SelectedImagePreview">
                                        <Binding.Converter>
                                            <helpers:NullToVisibilityConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </Button.Visibility>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Separator -->
                    <Separator Margin="0,20"/>

                    <!-- Section Notes -->
                    <TextBlock Text="Notes additionnelles"
                               Style="{StaticResource H3}"
                               Foreground="{StaticResource PrimaryBrush}"/>

                    <Label Content="Description / Remarques" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="Informations complÃ©mentaires sur le vÃ©hicule"/>

                    <!-- Messages de validation -->
                    <TextBlock Text="{Binding ValidationMessage}"
                               Foreground="#E74C3C"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuler"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource SecondaryButton}"
                    Width="120"
                    Margin="0,0,12,0"/>

            <Button Content="Ajouter le vÃ©hicule"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Style="{StaticResource PrimaryButton}"
                    Width="160"
                    IsEnabled="{Binding CanSave}"/>
        </StackPanel>
    </Grid>
</Window>
