<UserControl x:Class="FleetManager.Views.FuelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:FleetManager.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F8FAFC">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <helpers:VehicleImagePathConverter x:Key="VehicleImagePathConverter"/>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        ClickMode="Press"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="14,10"/>
                                                <Path Grid.Column="1"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#64748B"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="14,10"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#E2E8F0"
                                        BorderThickness="2"
                                        CornerRadius="10"
                                        MaxHeight="200"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#1E293B" Opacity="0.1" BlurRadius="20"/>
                                    </Border.Effect>
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- EN-TÃŠTE Dashboard Style -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Carburant" 
                              FontFamily="Inter, Segoe UI"
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#0F172A" 
                              Margin="0,0,0,6"/>
                    <TextBlock Text="Suivez les pleins de carburant de votre flotte" 
                              FontSize="14" 
                              Foreground="#64748B"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="Transparent"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Margin="0,0,12,0"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="14"
                               Padding="0"
                               Content="ðŸ”„ Actualiser"
                               Command="{Binding LoadDataCommand}"
                               Cursor="Hand"/>
                    </Border>
                    <Border Background="#3B82F6"
                           CornerRadius="8"
                           Padding="12,8"
                           Height="40"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               Padding="0"
                               Content="â›½ Nouveau Plein"
                               Command="{Binding AddFuelRecordCommand}"
                               Cursor="Hand"/>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- BARRE DE FILTRES -->
            <Border Background="#FFFFFF" 
                   BorderBrush="#E2E8F0" 
                   BorderThickness="1" 
                   CornerRadius="12" 
                   Padding="16" 
                   Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
                <WrapPanel Orientation="Horizontal">
                    <!-- Recherche -->
                    <Border Background="#F8FAFC" 
                           CornerRadius="8" 
                           Height="40" 
                           Width="400"
                           Margin="0,0,16,0"
                           Padding="12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="#475569"
                                    VerticalContentAlignment="Center"
                                    Width="300"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Filtre par vÃ©hicule -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,16,0" VerticalAlignment="Center">
                        <TextBlock Text="ðŸš—" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding Vehicles}"
                                  SelectedItem="{Binding SelectedVehicle}"
                                  DisplayMemberPath="DisplayName"
                                  Width="200"
                                  Height="36"
                                  FontSize="13"
                                  Background="#FFFFFF"
                                  BorderBrush="#E2E8F0"
                                  BorderThickness="1"
                                  Padding="10,0"
                                  VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Bouton RÃ©initialiser -->
                    <Border Background="#F8FAFC"
                           BorderBrush="#E2E8F0"
                           BorderThickness="1"
                           CornerRadius="8"
                           Padding="10,8"
                           Height="40"
                           VerticalAlignment="Center"
                           Cursor="Hand">
                        <Button Background="Transparent"
                               BorderThickness="0"
                               Foreground="#475569"
                               FontSize="13"
                               Padding="0"
                               Content="â†º RÃ©initialiser"
                               Command="{Binding ResetFiltersCommand}"
                               Cursor="Hand"/>
                    </Border>
                </WrapPanel>
            </Border>

            <!-- LISTE DES PLEINS DE CARBURANT -->
            <ItemsControl ItemsSource="{Binding FuelRecords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" 
                               BorderBrush="#E2E8F0" 
                               BorderThickness="1" 
                               CornerRadius="12" 
                               Padding="16"
                               Margin="0,0,0,12"
                               Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.04" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image du vÃ©hicule ou icÃ´ne du plein -->
                                <Border Grid.Column="0" 
                                        Width="80" 
                                        Height="80" 
                                        Background="#10B981"
                                        CornerRadius="12" 
                                        Margin="0,0,20,0"
                                        ClipToBounds="True">
                                    <Grid>
                                        <Image Source="{Binding Vehicle.ImagePath, Converter={StaticResource VehicleImagePathConverter}}"
                                              Stretch="UniformToFill"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="{Binding Vehicle.ImagePath, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <TextBlock Text="â›½" 
                                                   FontSize="40" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Visibility="{Binding Vehicle.ImagePath, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    </Grid>
                                </Border>

                                <!-- Informations du plein -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- VÃ©hicule et Date -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding Vehicle.RegistrationNumber}" 
                                                   FontSize="20" 
                                                   FontWeight="Bold" 
                                                   Foreground="#1E293B"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Border Background="#EEF2FF" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="12,0,0,0">
                                            <TextBlock Text="{Binding RefuelDate, StringFormat=dd/MM/yyyy}" 
                                                       FontSize="13" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#6366F1"/>
                                        </Border>

                                        <!-- Badge plein complet -->
                                        <Border Visibility="{Binding IsFullTank, Converter={StaticResource BoolToVisibility}}"
                                                Background="#D1FAE5" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="8,0,0,0">
                                            <TextBlock Text="âœ“ Plein complet" 
                                                       FontSize="12" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#059669"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Type de carburant et Station -->
                                    <TextBlock Grid.Row="1" 
                                               Margin="0,0,0,8">
                                        <Run Text="{Binding FuelType}" 
                                             FontSize="16" 
                                             FontWeight="SemiBold" 
                                             Foreground="#475569"/>
                                        <Run Text="â€¢" 
                                             Foreground="#CBD5E1"/>
                                        <Run Text="{Binding Station}" 
                                             FontSize="16" 
                                             Foreground="#64748B"/>
                                    </TextBlock>

                                    <!-- DÃ©tails du plein -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“Š" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" Foreground="#475569">
                                                    <Run Text="{Binding LitersRefueled, StringFormat=N2}"/>
                                                    <Run Text="L"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ’°" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" Foreground="#475569">
                                                    <Run Text="{Binding PricePerLiter, StringFormat=N3}"/>
                                                    <Run Text="â‚¬/L"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#FEF3C7" 
                                                CornerRadius="8" 
                                                Padding="8,4" 
                                                Margin="0,0,8,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ’³" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" 
                                                           FontWeight="Bold"
                                                           Foreground="#D97706">
                                                    <Run Text="{Binding TotalCost, StringFormat=N2}"/>
                                                    <Run Text="â‚¬"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#F1F5F9" 
                                                CornerRadius="8" 
                                                Padding="8,4">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock FontSize="13" Foreground="#475569">
                                                    <Run Text="{Binding Mileage, StringFormat=N0}"/>
                                                    <Run Text="km"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Boutons d'action -->
                                <StackPanel Grid.Column="2" 
                                           Orientation="Horizontal"
                                           VerticalAlignment="Center">
                                    <Button Content="âœï¸ Modifier"
                                            Command="{Binding DataContext.EditFuelRecordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            ToolTip="Modifier cet enregistrement"/>
                                    <Button Content="ðŸ—‘ï¸ Supprimer"
                                            Command="{Binding DataContext.DeleteFuelRecordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerButton}"
                                            ToolTip="Supprimer cet enregistrement"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                    </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
