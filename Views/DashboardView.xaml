<!-- Views/DashboardView.xaml -->
<UserControl x:Class="FleetManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FleetManager.Views"
             xmlns:viewmodels="clr-namespace:FleetManager.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Styles personnalisÃ©s -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>

        <Style x:Key="AlertHighStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#F44336"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style x:Key="AlertMediumStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF8E1"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

        <Style x:Key="AlertLowStyle" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E8"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F5F5F5">
        <!-- En-tÃªte avec indicateur de chargement -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š Tableau de bord" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding LastUpdated}" FontSize="12" Foreground="#666666"
                               VerticalAlignment="Bottom" Margin="20,0,0,2"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="ðŸ”„ Actualiser" Command="{Binding RefreshCommand}"
                            Padding="10,5" Margin="5" Background="#2196F3" Foreground="White"
                            BorderThickness="0"/>
                    <ProgressBar IsIndeterminate="{Binding IsLoading}" Width="100" Height="4"
                                 Margin="10,0" VerticalAlignment="Center"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal avec ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>

                <!-- Alertes critiques -->
                <Border Style="{StaticResource MetricCardStyle}"
                    Visibility="{Binding CriticalAlerts, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="âš ï¸ Alertes critiques" FontSize="16" FontWeight="Bold"
                                   Foreground="#F44336" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding Alerts}" MaxHeight="100">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                            <Border Margin="2" Padding="8" CornerRadius="3" Background="#FFEBEE"
                                            Visibility="{Binding Priority, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸš¨" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding VehicleRegistration}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="-" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Message}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Indicateurs clÃ©s de performance (KPI) -->
                <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ“ˆ Indicateurs clÃ©s"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total vÃ©hicules -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Background="#E3F2FD">
                        <StackPanel>
                            <TextBlock Text="ðŸš—" FontSize="30" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalVehicles}" Style="{StaticResource MetricValueStyle}" Foreground="#1976D2"/>
                            <TextBlock Text="VÃ©hicules" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding ActiveVehiclePercentage, StringFormat={}{0:F0}% actifs}"
                                       FontSize="10" HorizontalAlignment="Center" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>

                    <!-- Total pleins -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}" Background="#E8F5E8">
                        <StackPanel>
                            <TextBlock Text="â›½" FontSize="30" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalFuelRecords}" Style="{StaticResource MetricValueStyle}" Foreground="#388E3C"/>
                            <TextBlock Text="Pleins" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding MonthlyFuelCost, StringFormat={}{0:C} ce mois}"
                                       FontSize="10" HorizontalAlignment="Center" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>

                    <!-- Consommation moyenne -->
                    <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}" Background="#FFF3E0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š" FontSize="30" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AverageFuelConsumption, StringFormat={}{0:F1}}" Style="{StaticResource MetricValueStyle}" Foreground="#F57C00"/>
                            <TextBlock Text="L/100km" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="Moyenne flotte" FontSize="10" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- CoÃ»t total -->
                    <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}" Background="#FCE4EC">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="30" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalFuelCost, StringFormat={}{0:C}}" Style="{StaticResource MetricValueStyle}" Foreground="#C2185B"/>
                            <TextBlock Text="Carburant" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding FuelToMaintenanceRatio, StringFormat=Ratio: {0:F1}}"
                                       FontSize="10" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Maintenance -->
                    <Border Grid.Column="4" Style="{StaticResource MetricCardStyle}" Background="#F3E5F5">
                        <StackPanel>
                            <TextBlock Text="ðŸ”§" FontSize="30" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalMaintenanceCost, StringFormat={}{0:C}}" Style="{StaticResource MetricValueStyle}" Foreground="#7B1FA2"/>
                            <TextBlock Text="Maintenance" Style="{StaticResource MetricLabelStyle}"/>
                            <TextBlock Text="{Binding VehiclesInMaintenance, StringFormat={}{0} en cours}"
                                       FontSize="10" HorizontalAlignment="Center" Foreground="#FF5722"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Graphiques et analyses -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Graphiques des tendances -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ“ˆ Tendances sur 30 jours"/>

                            <TabControl Background="Transparent" BorderThickness="0">
                                <TabItem Header="Consommation" Background="White">
                                    <Grid Height="200" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="28"/>
                                        </Grid.RowDefinitions>
                                        <lvc:CartesianChart x:Name="DashboardConsumptionChart" Series="{Binding ConsumptionSeries}" Grid.Row="0" LegendPosition="Top" />
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                            <ItemsControl ItemsSource="{Binding TrendLabels}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" FontSize="10" Margin="6,0" HorizontalAlignment="Center">
                                                            <TextBlock.RenderTransform>
                                                                <RotateTransform Angle="45"/>
                                                            </TextBlock.RenderTransform>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </TabItem>

                                <TabItem Header="CoÃ»ts" Background="White">
                                    <Grid Height="200" Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="28"/>
                                        </Grid.RowDefinitions>
                                        <lvc:CartesianChart x:Name="DashboardCostChart" Series="{Binding CostSeries}" Grid.Row="0" LegendPosition="Top" />
                                        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                            <ItemsControl ItemsSource="{Binding TrendLabels}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" FontSize="10" Margin="6,0" HorizontalAlignment="Center">
                                                            <TextBlock.RenderTransform>
                                                                <RotateTransform Angle="45"/>
                                                            </TextBlock.RenderTransform>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </Border>

                    <!-- RÃ©partition par type -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸš™ RÃ©partition par type"/>

                            <ItemsControl ItemsSource="{Binding VehicleTypeStats}" MaxHeight="200">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                                CornerRadius="4" Padding="8" Margin="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding TypeName}" FontWeight="Bold" FontSize="12"/>
                                                    <TextBlock Text="{Binding AverageConsumption, StringFormat={}{0:F1} L/100km}"
                                                               FontSize="10" Foreground="#666666"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding Count}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding TotalCost, StringFormat={}{0:C}}"
                                                               FontSize="10" Foreground="#FF9800"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Top vÃ©hicules et alertes -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top consommateurs -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitleStyle}" Text="âš¡ Top consommateurs"/>

                            <ListView ItemsSource="{Binding TopVehiclesByConsumption}"
                                      Background="Transparent" BorderThickness="0" MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding RegistrationNumber}" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding VehicleName}" FontSize="10" Foreground="#666666"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" Text="{Binding AverageConsumption, StringFormat={}{0:F1} L/100km}"
                                                       FontWeight="Bold" FontSize="12" Foreground="#F44336"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Top coÃ»teux -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ’¸ Top coÃ»teux"/>

                            <ListView ItemsSource="{Binding TopVehiclesByCost}"
                                      Background="Transparent" BorderThickness="0" MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding RegistrationNumber}" FontWeight="Bold" FontSize="12"/>
                                                <TextBlock Text="{Binding VehicleName}" FontSize="10" Foreground="#666666"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" Text="{Binding TotalCost, StringFormat={}{0:C}}"
                                                       FontWeight="Bold" FontSize="12" Foreground="#FF9800"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Alertes dÃ©taillÃ©es -->
                    <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ”” Alertes"/>

                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding Alerts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                                <Border Margin="2" Padding="8" CornerRadius="4"
                                                    Background="#FFFFFF">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Type}" FontSize="12" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding Priority}" FontSize="10"
                                                                   Foreground="#666666" Margin="10,0,0,0"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding VehicleRegistration}" FontWeight="Bold" FontSize="11"/>
                                                    <TextBlock Text="{Binding Message}" FontSize="10"
                                                               TextWrapping="Wrap" Foreground="#444444"/>
                                                    <TextBlock Text="{Binding Date, StringFormat=dd/MM/yyyy}"
                                                               FontSize="9" Foreground="#999999"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Mouvements rÃ©cents -->
                <Border Style="{StaticResource MetricCardStyle}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ“‹ Mouvements rÃ©cents"/>

                        <DataGrid ItemsSource="{Binding RecentMovements}"
                                  AutoGenerateColumns="False"
                                  Background="White"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F8F9FA"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="VÃ©hicule" Binding="{Binding VehicleName}" Width="200"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding MovementType}" Width="100"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="CoÃ»t" Binding="{Binding Cost, StringFormat={}{0:C}}" Width="80"/>
                                <DataGridTextColumn Header="KilomÃ©trage" Binding="{Binding Mileage, StringFormat={}{0:N0} km}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Statistiques mensuelles - Ã‰volution sur 12 mois -->
                <Border Style="{StaticResource MetricCardStyle}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitleStyle}" Text="ðŸ“… Ã‰volution sur 12 mois"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="300"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Graphique avec LiveCharts -->
                            <lvc:CartesianChart x:Name="MonthlyTrendsChart" 
                                                Series="{Binding MonthlyTrendsSeries}"
                                                Grid.Row="0"
                                                LegendPosition="Top"
                                                TooltipPosition="Top">
                            </lvc:CartesianChart>

                            <!-- Tableau rÃ©capitulatif des donnÃ©es mensuelles -->
                            <Border Grid.Row="1" 
                                    Background="#F8F9FA" 
                                    CornerRadius="6" 
                                    Padding="15" 
                                    Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Totaux -->
                                    <StackPanel Grid.Column="0" Margin="5">
                                        <TextBlock Text="ðŸ’° Carburant Total" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#4CAF50"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding YearlyFuelTotal, StringFormat={}{0:C0}}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#2E7D32"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="5">
                                        <TextBlock Text="ðŸ”§ Maintenance Total" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#FF9800"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding YearlyMaintenanceTotal, StringFormat={}{0:C0}}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#E65100"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="5">
                                        <TextBlock Text="ðŸ“Š CoÃ»t Total Annuel" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#2196F3"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding YearlyOperatingCost, StringFormat={}{0:C0}}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#0D47A1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Margin="5">
                                        <TextBlock Text="ðŸ“ˆ Moyenne Mensuelle" 
                                                   FontSize="11" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#9C27B0"
                                                   Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding MonthlyAverageCost, StringFormat={}{0:C0}}" 
                                                   FontSize="18" 
                                                   FontWeight="Bold" 
                                                   Foreground="#6A1B9A"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Actions rapides -->
                <Border Style="{StaticResource MetricCardStyle}" Margin="0,20,0,20">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionTitleStyle}" Text="âš¡ Actions rapides"/>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,10">
                                <Button Content="ðŸ“Š Voir statistiques dÃ©taillÃ©es"
                                    Padding="15,8" Margin="5"
                                    Background="#2196F3" Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding ViewDetailedStatisticsCommand}"/>
                            <Button Content="ðŸ“ GÃ©nÃ©rer rapport"
                                    Padding="15,8" Margin="5"
                                    Background="#4CAF50" Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding GenerateReportCommand}"/>
                            <Button Content="ðŸ“¤ Exporter donnÃ©es"
                                    Padding="15,8" Margin="5"
                                    Background="#FF9800" Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding ExportDataCommand}"/>
                            <Button Content="âš™ï¸ Configuration"
                                    Padding="15,8" Margin="5"
                                    Background="#9E9E9E" Foreground="White"
                                    BorderThickness="0"
                                    Command="{Binding OpenSettingsCommand}"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
