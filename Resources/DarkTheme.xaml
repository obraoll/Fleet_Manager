<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ======================================================================================== -->
    <!-- DARK THEME - Thème sombre pour Fleet Manager -->
    <!-- ======================================================================================== -->

    <!-- Couleurs Principales Dark Mode -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#818CF8"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#312E81"/>

    <!-- Couleurs Secondaires -->
    <SolidColorBrush x:Key="SecondaryBrush" Color="#8B5CF6"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="#A78BFA"/>
    
    <!-- Couleur d'Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#EC4899"/>
    
    <!-- Couleurs d'État -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#064E3B"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#78350F"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="DangerLightBrush" Color="#7F1D1D"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#1E3A8A"/>
    
    <!-- Couleurs Neutres Dark -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0F172A"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="#0F172A"/>
    
    <!-- Couleurs de Texte Dark -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#94A3B8"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>
    
    <!-- Bordures Dark -->
    <SolidColorBrush x:Key="BorderBrush" Color="#334155"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#475569"/>
    
</ResourceDictionary>

