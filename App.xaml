<Application x:Class="FleetManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:FleetManager.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Modern Theme System -->
                <ResourceDictionary Source="Resources/ModernTheme.xaml"/>
                
                <!-- Styles globaux (legacy) -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Convertisseurs -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
            <helpers:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibility"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>